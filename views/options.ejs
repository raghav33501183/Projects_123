  <body>
    <img class="imghd" src="images/eventheader.jfif" width="100%" height="180px">
    <h2 class="heading"><b><i>Ƀɽǭⱳṩȅ Ꞙɵꞧ Ꝟᶒɲṹᶒṩ</i></b></h2>
    <% for (let i=0; i<newListItems.length; i++) { %>
    <div class="recbox">
      <img class="recimg" id="img" src="uploads/<%= newListItems[i].Image %>" width=20% height="150px">
      <h2><%= newListItems[i].Event_Organzation_Name %></h2>
      <h6><%= newListItems[i].Event_Speciality %></h3>
      <div class="contents">
        <table>
          <tr>
            <td><p>Contact No.: <%= newListItems[i].Office_Phone_Number %></p></td>
            <td class="secrow"><p>⭐: <%= newListItems[i].Rating>0?Math.round(newListItems[i].Rating * 10) / 10:newListItems[i].Rating %></p></td>
          </tr>
          <tr>
            <td class="city"><p><%= newListItems[i].City %></p></td>
            <td class="secrow"><p>Rent/hr: <%= newListItems[i].Fare_Per_Hour %></p></td>
            <% if(vary == 'fff') { %>
              <form class="" action="/confirm" method="post">
                <button class="btn btn-danger" type="submit" name="custId" value="<%= newListItems[i]._id %>">BROWSE</button>
              </form>
            <% } else { %>
                <a href="login"><button class="btn btn-danger" type="submit" name="custId" value="<%= newListItems[i]._id %>">BROWSE</button></a>
            <% } %>


          </tr>
        </table>

      </div>



    </div>
    <% } %>

